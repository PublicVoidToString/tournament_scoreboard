{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="contentBoxSingle">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }} Nieprawidłowe dane logowania!</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Panel Administracyjny</h1>
            <label for="username" style="font-weight: bold;">Użytkownik</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            <label for="password" style="font-weight: bold;">Hasło</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <button class="aButton" type="submit"> Zaloguj się </button>
        </form> <br>
        <button type="button" class="aButton" onclick="history.back();" style="background-color: #444444dd;"> Powrót </button>
    </div>
{% endblock %}
